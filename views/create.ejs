<!-- HTML page content -->
<body>
  <%- include('partials/_nav') %>

  <!-- main product container -->
    <body class="product-main">
      <div class="create-container">
        <form>
          <label for="title">TITLE:</label>
          <input type="text" id="title" name="title" required>
          <label for="description">DESCRIPTION:</label>
          <input type="text" id="description" name="description" required>
          <label>SIZE:</label>
          <select name="size" id="size">
            <option value="S">S</option>
            <option value="M">M</option>
            <option value="L">L</option>
          </select>
          <label>GLUTEN FREE:</label>
            <select name="size" id="size">
              <option value="FALSE">FALSE</option>
              <option value="TRUE">TRUE</option>
            </select>
          <label>VEGETARIAN:</label>
            <select name="size" id="size">
              <option value="FALSE">FALSE</option>
              <option value="TRUE">TRUE</option>
            </select>
          <label for="bread_type">BREAD:</label>
          <input type="text" id="bread_type" name="bread_type" required>
          <label for="protein">PROTEIN:</label>
          <input type="text" id="protein" name="protein" required>
          <label for="price">PRICE:</label>
          <input type="text" id="price" name="price" required>
        </form>
      </div>
      <span>*bread and protein will default to chicken and sliced*</span>
      <footer>
        <a href="" class="create-button">SUBMIT</a>
      </footer>
    </body>
</body>

</html>
