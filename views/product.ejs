<!DOCTYPE html>
<html lang="en">

<head>
  <title>Main</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <!-- External Font CSS -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">

  <!-- Stylesheet CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/header.css" />
  <link rel="stylesheet" href="/styles/listings.css" />
  <link rel="stylesheet" href="/styles/product.css" />
  <link rel="stylesheet" href="/styles/favorite.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script src="/scripts/favorites.js"></script>
</head>

  <!-- Icons CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">

<!-- HTML page content -->
<body>
  <%- include('partials/_nav') %>

  <!-- main product container -->
  <body class="product-main">
    <div class="product-container">
      <section class="product-image-container">
        <img src=<%= sandwich.thumbnail_url %>></img>
          <section class="icons-container">

            <% if (cookie.includes('admin=true')) { %>
              <button style="cursor: pointer;" class="garbage-icon" onclick="window.location='/listings/';">
                <i class="fa-solid fa-trash-can"></i>
              </button>
            <% } %>

            <% if (cookie.includes('user=true')) { %>
              <% if (favorite === true) {%>
                  <i class="glyphicon glyphicon-star favorite-btn"></i>
              <% } else { %>
                  <i class="glyphicon glyphicon-star-empty favorite-btn"></i>
              <% } %>
            <% } %>

          </section>

      </section>

      <section class="product-description-container">
        <ul>
          <td><span style="color: #e0e0e0">TITLE: </span><%= sandwich.title %></td><br>
          <td><span style="color: #e0e0e0">DESCRIPTION: </span><%= sandwich.description %></td><br>
          <td><span style="color: #e0e0e0">SIZE: </span><%= sandwich.size %></td><br>
          <td><span style="color: #e0e0e0">GLUTEN FREE: </span>
            <% if (sandwich.gluten_free === true) { %>
              YES
            <% } else { %>
              NO
            <% } %>
          </td><br>
          <td><span style="color: #e0e0e0">VEGETARIAN: </span>
           <% if (sandwich.vegetarian === true) { %>
            YES
          <% } else { %>
            NO
          <% } %>
          </td><br>
          <td><span style="color: #e0e0e0">PROTEIN: </span><%= sandwich.protein %></td><br>
          <td><span style="color: #e0e0e0">BREAD: </span><%= sandwich.bread_type %></td><br>
          <td><span style="color: #e0e0e0">PRICE: </span>$<%= sandwich.price / 100%></td>
        </ul>
      </section>
    </div>
    <footer class="product-seller-info">
      <span style="color: #e0e0e0">SELLER INFORMATION: </span><%= sandwich.seller_name %> - <%= sandwich.seller_email %> - #<%= sandwich.seller_phone_number %>
    </footer>
  </body>

</body>

</html>
